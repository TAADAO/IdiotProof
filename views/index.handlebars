<!-- Modal Form -->
<div class="modal fade" id="modalContactForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Add New Item</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="md-form mb-5">        
          <input type="text" id="name" class="form-control validate" placeholder="Name">
          <label data-error="wrong" data-success="right" for="name"></label>
        </div>

        <div class="md-form mb-5">          
          <input type="email" id="categories" class="form-control validate" placeholder="Categories">
          <label data-error="wrong" data-success="right" for="categories"> </label>
        </div>

        <div class="md-form mb-5">          
          <input type="text" id="barcode" class="form-control validate" placeholder="Barcode #">
          <label data-error="wrong" data-success="right" for="barcode"></label>
        </div>

        <div class="md-form mb-5">           
            <input type="text" id="renewal-price" class="form-control validate" placeholder="Renewal Price">
            <label data-error="wrong" data-success="right" for="renewal-price"></label>
          </div>

          <div class="md-form mb-5">            
              <input type="text" id="date" class="form-control validate" placeholder="Expiration date">
              <label data-error="wrong" data-success="right" for="date"></label>
            </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-unique bg-primary">Send <i class="fas fa-paper-plane-o ml-1"></i></button>
      </div>
    </div>
  </div>
</div>


